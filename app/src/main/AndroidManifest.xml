<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="griffits.fvi.at.ua.starbuzz">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_starbuzz_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_starbuzz_app"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".TopLevelActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Menu.drinks.DrinkCategoryActivity"
            android:label="@string/title_activity_drink_category" />
        <activity
            android:name=".Menu.dessert.DessertCategoryActivity"
            android:label="@string/title_activity_dessert_category" />

        <activity android:name=".Menu.drinks.DrinkDescriptionActivity" />
        <activity android:name=".Menu.dessert.DessertDescriptionActivity"/>

    </application>

</manifest>